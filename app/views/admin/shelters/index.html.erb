<h1>Shelters</h1>

<div id="admin_shelter_list">
  <h2> All Shelters </h2>
  <% @shelters.each_with_index do |shelter, index| %>
    <div id="shelter_name-<%= index %>">
      <%= link_to "#{shelter.name}", "/admin/shelters/#{shelter.id}" %>
    </div>
  <% end %>
</div>

<div id="pending_apps">
  <h2> Shelters with Pending Applications </h2>
  <div>
    <% @shelters_apps_pending.each do |shelter| %>
        <%= shelter.name %>
    <% end %>
  </div>
</div>
